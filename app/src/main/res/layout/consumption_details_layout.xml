<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:layout_height="wrap_content">


    <LinearLayout
        android:id="@+id/ll_status_click"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="5dp"
        android:padding="2dp"
        android:layout_gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_consumption_De_materialCode"
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_weight="1"
                android:fontFamily="@font/proxima_family"
                android:text="50000073"
                android:textColor="@color/black"
                android:textSize="12sp" />

            <TextView
                android:textAllCaps="false"
                android:id="@+id/tv_consumption_De_materialName"
                android:layout_width="130dp"
                android:layout_height="match_parent"
                android:fontFamily="@font/proxima_family"
                android:gravity="center"
                android:layout_weight="1"
                android:text="Purlin HAT 75X40X22X0.9 L4720"
                android:textColor="@color/black"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_consumption_De_consQty"
                android:fontFamily="@font/proxima_family"
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="@color/black"
                android:layout_weight="2"
                android:layout_marginStart="15dp"
                android:text="10.000"
                android:textSize="12sp" />

        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_margin="3dp"
        android:background="@color/grey_very_light" />

</LinearLayout>