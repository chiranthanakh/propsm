<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:orientation="vertical"
    android:layout_height="wrap_content">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="5dp"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/in_status_indentnumber"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="start|center"
                android:text="1"
                android:fontFamily="@font/proxima_family"
                android:layout_marginStart="20dp"
                android:textColor="@color/black"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/in_status_contractor"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:fontFamily="@font/proxima_family"
                android:text="Mondal Enterprises"
                android:textColor="@color/black"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/in_status"
                android:fontFamily="@font/proxima_nova_bold"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"

                android:gravity="center"
                android:text="Pending"
                android:textColor="@color/black"
                android:textSize="13sp" />
            <ImageView
                android:id="@+id/iv_action_edit_indent"
                android:layout_width="wrap_content"
                android:padding="5dp"
                android:layout_height="match_parent"
                android:background="?selectableItemBackground"
                android:src="@drawable/ic_edit"
                app:tint="@color/icon_color" />
        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_margin="1dp"
        android:background="@color/grey_very_light" />


</LinearLayout>