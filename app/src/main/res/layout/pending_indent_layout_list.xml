<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_height="wrap_content">


    <LinearLayout
        android:id="@+id/ll_status_click"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="5dp"
        android:padding="2dp"
        android:layout_gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_pending_indent_number"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:fontFamily="@font/proxima_family"
                android:text="18"
                android:textColor="@color/black"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/tv_pending_indent_contactor"
                android:layout_width="170dp"
                android:layout_height="match_parent"
                android:fontFamily="@font/proxima_family"
                android:gravity="center"
                android:layout_marginStart="5dp"
                android:text="Mondal Enterprises"
                android:textColor="@color/black"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/pending_indent_status"
                android:fontFamily="@font/proxima_nova_bold"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:gravity="start|center"
                android:layout_marginStart="2dp"
                android:text="Pending"
                android:textSize="13sp" />

            <ImageView
                android:id="@+id/iv_action_view"
                android:fontFamily="@font/proxima_nova_bold"
                android:layout_width="50dp"
                android:layout_marginEnd="10dp"
                android:padding="4dp"
                android:visibility="gone"
                android:layout_height="match_parent"
                android:background="?selectableItemBackground"
                android:src="@drawable/eye"
                app:tint="@color/icon_color" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_margin="3dp"
        android:background="@color/grey_very_light" />






</LinearLayout>