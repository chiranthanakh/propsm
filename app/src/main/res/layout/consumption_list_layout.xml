<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/ll_status_click"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="5dp"
        android:padding="2dp"
        android:layout_gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_consumption_ConName"
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_weight="1"
                android:fontFamily="@font/proxima_family"
                android:text="M/s Shree Krishna Precast"
                android:textColor="@color/black"
                android:textSize="12sp" />

            <TextView
                android:textAllCaps="false"
                android:id="@+id/tv_consumption_LocName"
                android:layout_width="130dp"
                android:layout_height="match_parent"
                android:fontFamily="@font/proxima_family"
                android:gravity="center"
                android:layout_weight="1"
                android:text="DHARAGADH - VILLAGE"
                android:textColor="@color/black"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_consumption_ConDate"
                android:fontFamily="@font/proxima_family"
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:gravity="start|center"
                android:textColor="@color/black"
                android:layout_weight="2"
                android:layout_marginStart="15dp"
                android:text="17-02-2022"
                android:textSize="12sp" />

            <ImageView
                android:id="@+id/iv_consumption_Action_view"
                android:layout_width="50dp"
                android:padding="4dp"
                android:layout_weight="0.1"
                android:layout_height="match_parent"
                android:background="?selectableItemBackground"
                android:src="@drawable/eye"
                app:tint="@color/icon_color" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_margin="3dp"
        android:background="@color/grey_very_light" />

</LinearLayout>