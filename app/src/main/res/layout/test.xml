<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/data_table"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/search">


        <LinearLayout
            android:id="@+id/list_bar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@color/electric_blue"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingTop="8dp"
            android:paddingBottom="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"

                android:gravity="center_vertical"
                android:text="Indent Number"
                android:textColor="@color/white"
                android:textSize="12sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:layout_marginStart="10dp"
                android:gravity="center_vertical"
                android:text="Contractor Name"
                android:textColor="@color/white"
                android:textSize="12sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Status"
                android:textColor="@color/white"
                android:textSize="12sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="end"
                android:layout_marginEnd="10dp"
                android:padding="1dp"
                android:text="Action"
                android:textSize="12sp"
                android:textColor="@color/white"/>

        </LinearLayout>


    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_status_click"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="10dp"
        android:padding="2dp"
        android:layout_gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_pending_indent_number"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:fontFamily="@font/proxima_family"
                android:text="18"
                android:textColor="@color/black"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/tv_pending_indent_contactor"
                android:layout_width="170dp"
                android:layout_height="match_parent"
                android:fontFamily="@font/proxima_family"
                android:gravity="center"
                android:text="Mondal Enterprises"
                android:textColor="@color/black"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/pending_indent_status"
                android:fontFamily="@font/proxima_nova_bold"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:gravity="start|center"
                android:text="Pending"
                android:textSize="13sp" />

            <ImageView
                android:id="@+id/iv_action_view"
                android:fontFamily="@font/proxima_nova_bold"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:background="?selectableItemBackground"
                android:src="@drawable/eye"
                app:tint="@color/icon_color" />
        </LinearLayout>
    </LinearLayout>


</LinearLayout>